{ "compilerOptions":
  { "module": "commonjs"
  , "moduleResolution": "node"
  , "lib": ["es2017", "dom"]
  , "target": "es2017"
  , "noImplicitAny": true
  , "removeComments": true
  , "preserveConstEnums": true
  , "allowUnreachableCode": true
  , "suppressImplicitAnyIndexErrors": true
  , "rootDir": "."
  , "outDir": "dist"
  , "sourceMap": true
  }
, "include": [ "src" ]
, "exclude": [ "node_modules", "**/*.spec.ts" ]
}
