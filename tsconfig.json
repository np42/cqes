{ "compilerOptions":
  { "module": "commonjs"
  , "moduleResolution": "node"
  , "lib": ["es5", "es6", "es2017", "dom"]
  , "target": "es6"
  , "noImplicitAny": true
  , "removeComments": true
  , "preserveConstEnums": true
  , "allowUnreachableCode": true
  , "declaration": true
  , "allowSyntheticDefaultImports": true
  , "outDir": "dist"
  , "sourceMap": true
  }
, "include": [ "index.ts", "helpers", "tests" ]
, "exclude": [ "node_modules", "**/*.spec.ts" ]
}
